<h2>すべてのユーザー</h2>
<table class="table table-hover">
  <% @all_users.each do |user| %>
  <tr>
    <td>
      <a href="users/<%= "#{user.id}" %>">
        <img src="<%= "#{user.image_url}" %>" width="25" height="25" >
      </a>
    </td>
    <td>
      <%= user.name %>
    </td>
    <td>
      <%== "フォロー中　<i class= 'fa fa-male'style='font-size: 15pt;color: #000066;'></i></id>" if user.followed_flag == 1 %>
    </td>
    <td>
      <% if user.followed_flag == 1 %>
        <%= form_for(user, :url => {:controller => 'user_relationships', :action => 'update', :id => user.id}) do |f| %>
          <%= f.hidden_field :followed_flag ,:value => 0 %>
          <%= f.submit "解除" ,:class => "btn btn-danger" %>
        <% end %>
      <% else  %>
        <%= form_for(user, :url => {:controller => 'user_relationships', :action => 'update', :id => user.id}) do |f| %>
          <%= f.hidden_field :followed_flag ,:value => 1 %>
          <%= f.submit "フォロー" ,:class => "btn btn-primary" %>
        <% end %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>

