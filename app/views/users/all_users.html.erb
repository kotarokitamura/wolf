<h2>すべてのユーザー</h2>
<table class="table table-hover">
  <% @all_users.each do |user| %>
  <tr>
    <td>
      <a href="users/<%= "#{user.id}" %>">
        <img src="<%= "#{user.image_url}" %>" width="25" height="25" >
      </a>
    </td>
    <td>
      <%= link_to user.name, controller: "users", action: "show", id: user.id %>
    </td>
    <td>
      <%== "<i class= 'fa fa-male'style='font-size: 15pt;color: #000066;'></i></id>" if user.followed_flag == 1 %>
    </td>
  </tr>
  <% end %>
</table>

