<legend>
  <div class="row">
    <div class="span1">
      <img src="<%= @post.user.image_url %>">
    </div>
    <div class="span5">
      <h2><%= @post.user.name %></h2>
    </div>
  </div>
</legend>

<legend>
  <div class="row">
    <div class="span5 offset1">
      <h4><%= @post.body %></h4>
    </div>
    <div class="span2">
    </div>
  </div>
</legend>

<br>
<br>
<br>
<h3>コメント</h3>
  <table class="table">
    <% @comments.each do |comment| %>
      <% next if comment.body.nil? %>
    <tr>
      <td width="20">
        <img src="<%= comment.user.image_url %>" width="30" height="30">
      </td>
      <td width="150">
        <h6><%= comment.body %></h6>
      </td>
      <td width="100">
        <h6><%= comment.user.name %></h6>
      </td>
    </tr>
    <% end %>
   </table>
<%= form_for shallow_args(@post, @comment), html: { class: 'form-vertical'} do |f| %>
  <%= f.text_area :body %>
  <br>
  <%= f.submit "投稿", :class => "btn btn-primary" %>
<% end %>
<br>
<a href="/users" class="btn">一覧へ戻る</a>
